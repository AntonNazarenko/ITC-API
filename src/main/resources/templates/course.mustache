<html lang="">
<body>
<div>
    <form method="post">
        <input type="text" name="name" placeholder="Введите название курса" />
        <input type="number" name="cost" placeholder="Цена">
        <input type="number" name="rating" placeholder="Рейтинг">
        <input type="number" name="duration" placeholder="Длительность">
        <input type="text" name="videoLink" placeholder="Ссылка">
        <button type="submit">Добавить</button>
    </form>
</div>
<div>Список курсов</div>
<form method="post" action="filter">
    <input type="text" name="filter">
    <button type="submit">Найти</button>
</form>
{{#courses}}
<div>
    <b>ID курса: {{id}}</b>
    <span>Название: {{name}}</span>
    <i>Цена: {{cost}}</i>
    <i>Оценка: {{rating}} из 5</i>
    <i>Длительность: {{duration}}</i>
    <video width="400" height="300" controls="controls">
        <source src="{{videoLink}}"  type='video/mp4; codecs="vp8, vorbis"'>
    </video>
</div>
{{/courses}}
</body>
</html>

